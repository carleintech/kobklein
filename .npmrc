# pnpm configuration for KobKlein project
# https://pnpm.io/npmrc

# Use strict peer dependencies to prevent phantom dependencies
strict-peer-dependencies=true

# Enable hoisting for better compatibility with some tools
hoist-pattern[]=*

# Auto install peer dependencies
auto-install-peers=true

# Use symlinks for better performance
symlink=true

# Save exact versions by default for better reproducibility
save-exact=true

# Dedupe dependencies to save disk space
dedupe-peer-dependents=true

# Use faster installation strategy
resolution-mode=highest

# Enable progress bar
progress=true

# Use registry with better performance
registry=https://registry.npmjs.org/

# Cache settings for better performance
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# Workspace settings
prefer-workspace-packages=true
link-workspace-packages=deep

# Security settings
audit-level=moderate
