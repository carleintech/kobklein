# ================================
# KobKlein Root Environment Variables
# ================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git!

# ================================
# üåê Core Application Settings
# ================================
NODE_ENV=development
APP_NAME=KobKlein
APP_VERSION=1.0.0

# ================================
# üîê Supabase Configuration
# ================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-service-role-key

# ================================
# üí≥ Stripe Configuration
# ================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here

# ================================
# üì± Twilio Configuration (SMS/Voice)
# ================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# üî• Firebase (Analytics/Push Only)
# ================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Content-Here\n-----END PRIVATE KEY-----\n"

# ================================
# ‚òÅÔ∏è Cloudflare Configuration
# ================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ================================
# üîë Security Keys
# ================================
ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# ================================
# üìß Email Configuration (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@kobklein.com

# ================================
# üí± Exchange Rate API (Optional)
# ================================
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# ================================
# üîç Monitoring & Analytics
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# üìù Development Settings
# ================================
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_API_DOCS=true

# ================================
# üöÄ Deployment Configuration
# ================================
# Vercel
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Render
RENDER_API_TOKEN=your_render_api_token_here
RENDER_SERVICE_ID=your_render_service_id_here

# ================================
# üìù Setup Instructions
# ================================
# 1. Copy this file: cp .env.example .env.local
# 2. Fill in all the placeholder values above
# 3. Run: pnpm run bootstrap:local
# 4. Follow the setup guide: docs/bootstrap.local.md
# ================================